{% block body %}
{{ block('headertext', 'front.html.twig') }}
<div class="text-center">
{{ form_start(form) }}
	<div class="form-group">
		{{ form_row(form.name) }}
	</div>
	
	<div class="form-group">
		{{ form_row(form.shortdescription) }}
	</div>
	
